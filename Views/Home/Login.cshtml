@using MyFirstAzureWebApp.Controllers
@model User
@{
    ViewData["Title"] = @language.GetKey("login");
}
@inject LanguageService language
<h1>@language.GetKey("login")</h1>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body class="card-body">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">@language.GetKey("sign up")</h2>
                    </div>
                    <div class="card-body">
                        <form asp-controller="home" asp-action="Login" method="post">
                            <div class="form-group">
                                <label for="Email">@language.GetKey("email")</label>
                                <input type="email" asp-for="UserLogin" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Password">@language.GetKey("password")</label>
                                <input type="password" asp-for="UserPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-block" type="submit">@language.GetKey("submit")</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>